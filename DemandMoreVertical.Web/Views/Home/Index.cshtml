@model DemandMoreVertical.Web.ViewModels.HomeViewModel

<div class="row">
    <h2>@Model.Athlete.FirstName @Model.Athlete.LastName</h2>
    <strong>@Model.Athlete.Country</strong>
</div>

<table class="table">
    <tr>
        <td><strong>Title</strong></td>
        <td><strong>Elevation</strong></td>
        <td><strong>Start Lat/Long</strong></td>
        @*<td><strong>End Lat/Long</strong></td>*@
    </tr>
    @foreach(var a in Model.Activities)
    {
        var total = Convert.ToDouble(a.TotalElevationGain) * 3.2808;
        <tr>
            <td>@a.Name</td>
            <td>@Convert.ToInt32(total).ToString() ft</td>
            @if (a.StartLatLng != null)
            {
                <td>@a.StartLatLng.Latitude</td>
            }
        </tr>
    }
</table>
