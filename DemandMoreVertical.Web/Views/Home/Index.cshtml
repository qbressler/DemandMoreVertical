@model DemandMoreVertical.Web.ViewModels.HomeViewModel

<div class="row">
    <img src="@Model.Athlete.profile_medium" />
    <h2>@Model.Athlete.firstname @Model.Athlete.lastname</h2>
    <strong>@Model.Athlete.country</strong>
</div>

<table class="table">
    <tr>
        <td><strong>Title</strong></td>
        <td><strong>Elevation</strong></td>
        <td><strong>Start Lat/Long</strong></td>
    </tr>
    @foreach(var a in Model.Activities.Where(w=>w.type.ToUpper() == "RIDE"))
    {
        var total = Convert.ToDouble(a.total_elevation_gain) * 3.2808;
        <tr>
            <td>@a.name</td>
            <td>@Convert.ToInt32(total).ToString() ft</td>
            @if (a.start_latitude != null)
            {
                <td>@a.start_latitude</td>
            }
        </tr>
    }
</table>
